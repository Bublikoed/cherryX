{
  "name": "template-html",
  "version": "1.0.0",
  "description": "Готовий шаблон для звичайної верстки (HTML, CSS, JS)",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:offline": "vite build && node scripts/fix-dist.js",
    "preview": "vite preview",
    "lint": "eslint src/**/*.{js,css}",
    "lint:fix": "eslint src/**/*.{js,css} --fix",
    "format": "prettier --write src/**/*.{js,css,html}",
    "format:check": "prettier --check src/**/*.{js,css,html}"
  },
  "keywords": [
    "html",
    "css",
    "javascript",
    "template",
    "vite",
    "frontend"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "terser": "^5.44.0",
    "vite": "^5.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
